<div class="text-white">
        <div class="mt-3">
            <button style="strong" class="raise"><a class="link" href="/lists/{{lists.id}}/edit">Edit</a></button>
        </div>

        <div class="mt-5">
          <h1>{{lists.title}}</h1>
          <h4>{{lists.description}}</h4>
        </div>

        <!--TODO: <h3>Owner: {{list.owner.username}}</h3>-->
</div>

<table class="table align-middle mt-5 bg-white">
  <thead class="bg-light">
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Food type</th>
      <th>Price</th>
    </tr>
  </thead>
  {{#each lists.added as |added|}}
  <tbody>
    <tr>
      <td>
        <div class="d-flex align-items-center">
          <img
              src="{{establishment.pictures}}"
              alt=""
              style="width: 45px; height: 45px"
              class="rounded-circle"
              />
          <div class="ms-3">
            <p class="fw-bold mb-1"><a class="link me-auto" href="/establishments/{{added.establishment.id}}">{{added.establishment.name}}</a></p>
          </div>
        </div>
      </td>
      <td>
        <p class="fw-normal mb-1">{{added.establishment.location}}</p>
      </td>
      <td>
        <p class="fw-normal mb-1">{{added.establishment.foodType}}</p>
      </td>
      <td>
        <p class="fw-normal mb-1">{{added.establishment.price}} â‚¬</p>
      </td>
      <td>
        <div class="me-auto d-flex justify-content-end">
          <form action="/lists/{{added.list}}/establishments/{{added.establishment.id}}/delete" method="POST">
            <button type="submit" style="color: black" class="raise fa fa-trash ml-5"></button>
          </form>
        </div>
      </td>
    </tr>
  </tbody>
  {{/each}}
</table>