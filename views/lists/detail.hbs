<div>
        <div class="mt-3">
            <button class="raise"><a href="/lists/{{lists.id}}/edit">Edit</a></button>
        </div>


        <h1>{{lists.title}}</h1>
        <h4>Description: {{lists.description}}</h4>
        <!--TODO: <h3>Owner: {{list.owner.username}}</h3>-->
        

</div>


<table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>Food type</th>
      <th>Price</th>
    </tr>
  </thead>
  {{#each lists.added as |added|}}
  <tbody>
    <tr>
      <td>
        <div class="d-flex align-items-center">
          <img
              {{!-- TODO: add establishment photo - src="" --}}
              alt=""
              style="width: 45px; height: 45px"
              class="rounded-circle"
              />
          <div class="ms-3">
            <p class="fw-bold mb-1"><a class="me-auto" href="/establishments/{{establishment.id}}">{{added.establishment.name}}</a></p>
          </div>
        </div>
      </td>
      <td>
        <p class="fw-normal mb-1">Location{{added.establishment.location}}</p>
      </td>
      <td>
        <p class="fw-normal mb-1">{{added.establishment.foodType}}</p>
      </td>
      <td>
        <p class="fw-normal mb-1">{{added.establishment.price}}</p>
      </td>
      <td>
        <button type="submit" class="raise">Delete</button>
      </td>
    </tr>
  </tbody>
  {{/each}}
</table>