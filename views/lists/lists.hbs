<div>
  <button type="submit" class="raise"><a class="me-auto" href="/create-list">Create list</a></button>
</div>

{{#each lists as |list|}}
<div class="card card-list mb-3 g-4">

  <div class="">   {{!--hacer que al pasar el cursor se enfoque --}}
      <img src="/establishment/toledo/2021-05-31.jpg" class="card-img-top" alt="Wild Landscape"/> <!-- TODO: Que salgan 3 fotos por marco-->
  </div>

  <div class="container px-4 text-center">
    <div class="row gx-5">
      <div class="col">

        <div class="d-flex justify-content-start mt-3 p-3">
          <h5 class="card-title"><a class="me-auto mt-3" href="/lists/{{list.id}}">{{list.title}}</a></h5>
        </div>

        <div class="d-flex justify-content-start mb-3 mt-3 mx-">
          <img src="https://mdbcdn.b-cdn.net/img/new/avatars/2.webp" class="rounded-circle mx-2" height="35" alt="profile" loading="lazy" />
          <p class="mt-1">{{list.owner.username}}</p>
        </div>

      </div>
      <div class="col">

        <div class="d-flex justify-content-end mt-5">
          <button type="submit" class="raise text-danger"><a style="color:hsla(0,100%,50%,1)" class="fa fa-times me-auto ml-5" href="/lists/{{list.id}}/delete"></a></button>
        </div>
        
      </div>

    </div>
  </div>
</div>
{{/each}}