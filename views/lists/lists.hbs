<!-- FIX: Se muestras las listas de todos los usuarios -->

<div>
  <button type="submit" class="raise mb-3"><a class="link me-auto" href="/create-list">Create list</a></button>
</div>


<div class="row">
{{#each lists as |list|}}
  <div class="col-12 col-md-6">
    <div class="card card-list mb-3 g-4">

      <div class="">   {{!--hacer que al pasar el cursor se enfoque --}}
        <img src="{{list.pictures}}" class="card-img-top" alt="Wild Landscape" />   {{!--TODO: Que salgan 3 fotos por marco --}}
      </div>

      <div class="container px-4 text-center">
        <div class="row gx-5">
          <div class="col-9">
            <div class="d-flex justify-content-start mt-3 p-3">
              <div>
                <h5 class="card-title"><a class="link me-auto mt-3" href="/lists/{{list.id}}">{{list.title}}</a></h5>
              </div>
            </div>

            <div class="d-flex justify-content-start mb-3 mt-3 mx-">
              <img src="{{list.owner.photo}}" class="rounded-circle mx-2" height="35" alt="profile" loading="lazy" />
              <p class="mt-1">{{list.owner.username}}</p>
            </div>
          </div>
          <div class="col-3 d-flex justify-content-center align-items-center">
              <button type="submit" class="raise"><a style="color: black" class="fa fa-trash me-auto ml-5" aria-hidden="true" href="/lists/{{list.id}}/delete"></a></button>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}
</div>