<div class="container py-5 h-100">
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
      <div class="card bg-dark text-white" style="border-radius: 1rem;">
        <div class="card-body p-5 text-center">

          <div class="mb-md-5 mt-md-4 pb-5">

            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
            <p class="text-white-50 mb-5">Please enter your username and password!</p>

            <form action="/login" method="POST">

              <div class="form-group mt-5">
                <label>Username</label>
                <input name="username" type="username" value="{{user.username}}"
                  class="form-control {{#if errors.username}}is-invalid{{/if}}">
                {{#if errors.username}} <div class="invalid-feedback">{{errors.username}}</div>{{/if}}
              </div>

              <div class="form-group mt-5">
                <label>Password</label>
                <input name="password" type="password" value="{{user.password}}"
                  class="form-control {{#if errors.password}}is-invalid{{/if}}">
                {{#if errors.password}} <div class="invalid-feedback">{{errors.password}}</div>{{/if}}
              </div>

              <div class="d-flex justify-content-center mt-6">
                <button type="submit" class="raise mt-5 btn btn-light">Login</button>
              </div>
            </form>
          </div>

          <div>
            <p class="mb-0">Don't have an account? <a href="/signup" class="text-white-50 fw-bold">Sign Up</a>
            </p>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

