<div class="card row">
    <div class="left col-lg-4">
        <div class="photo-start d-flex justify-content-start mt-3 mb-2">
            <img class="photo mx-3" style="border-radius: 50%" height="200px" src={{currentUser.photo}}>
        </div>
        <div class="d-flex align-items-start mt-2">
            <div class="stat col-xs-4" style="padding-right: 50px;">
                <p class="number-stat mx-4">0</p>
                <p class="desc-stat">Followers</p>
            </div>
            <div class="stat col-xs-4" style="padding-right: 50px;">
                <p class="number-stat mx-4">0</p>
                <p class="desc-stat">Following</p>
            </div>
            <div class="stat col-xs-4" style="padding-right: 50px;">
                <p class="number-stat mx-2">0</p>
                <p class="desc-stat">Lists</p>
            </div>
        </div>
    </div>
        <div class="d-flex justify-content-end">
            <div class="text-center">
                <h4 class="name"> Username: {{currentUser.username}}</h4>
                <p class="info">Email: {{currentUser.email}}</p>
                <div class="card">
                    <h5 class="description">Description: {{currentUser.description}}</h5>
                </div>
            </div>
        </div>
</div>

<div>
    <button class="d-flex justify-content-start mt-2 btn raise btn-outline-primary"><a href="/users/{{currentUser.id}}/edit">Edit</a></button>
</div>
<form action="/delete" method="post" class="d-flex justify-content-start mb-2">
    <input type="hidden" name="_method" value="delete">
    <button type="submit" class="btn raise btn-outline-danger mb-1">Delete</button>
</form>

